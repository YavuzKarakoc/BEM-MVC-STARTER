@model CategoryAndListViewModel

<div class="row">
    <div class="col-6">
        <h3>Kategoriler</h3>
        <ul class="list-group">
            @foreach (var category in Model.Categories)
            {
                <li class="list-group-item">
                        @category.Name
                    <form asp-action="Delete">
                        <input name="CategoryId" value="@category.Id" hidden />
                        <button class="btn btn-danger">Sil</button>
                    </form>
                </li>
            }
        </ul>
    </div>
    <div class="col-6">
        <h3>Kategori Ekle</h3>
        <div asp-validation-summary="All"></div>
        <form asp-action="Create">
            <div class="mb-3">
                <label class="form-label">Kategori Adı</label>
                <input type="text"
                       class="form-control" asp-for="Category.Name">
            </div>
            <div class="mb-3">
                <label class="form-label">Kategori Açıklması</label>
                <textarea
                       class="form-control" asp-for="Category.Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Kategoriyi Kaydet</button>
        </form>
    </div>
</div>